    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "name": "Launch locally in Firefox",
            "file": "${workspaceFolder}/flight.html"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch locally in Chrome",
            "file": "${workspaceFolder}/flight.html",
            "disableNetworkCache": true
        },
        {
            "type": "edge",
            "request": "launch",
            "name": "Launch locally in Edge",
            "file": "${workspaceFolder}/flight.html",
            "disableNetworkCache": true
        }
    ]
}